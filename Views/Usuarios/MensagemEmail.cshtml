@model plant_care_hub.Models.User

@{
    ViewData["Title"] = "msgemail";
}

<div id="msgemail">
    <div class="msgemail-content">
        <div class="inner">
            <div class="msgemail-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 24 24" fill="none"
                    stroke="#efcf3b" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="lucide lucide-mail-open-icon lucide-mail-open">
                    <path
                        d="M21.2 8.4c.5.38.8.97.8 1.6v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V10a2 2 0 0 1 .8-1.6l8-6a2 2 0 0 1 2.4 0l8 6Z" />
                    <path d="m22 10-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 10" />
                </svg>
            </div>
            <h1>Verifique seu e-mail</h1>
            <p class="subtitle">Enviamos um link na caixa de entrada do email {{EMAIL_USER}}</p>
            <form id="msgemailForm" asp-action="msgemail">
                <button type="submit" id="submitBtn" asp-controller="Usuarios" asp-action="msgemail">Abrir
                    e-mail</button>

                <a class="link-auth" asp-controller="Usuarios" asp-action="Create">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                        class="lucide lucide-move-left-icon lucide-move-left">
                        <path d="M6 8L2 12L6 16" />
                        <path d="M2 12H22" />
                    </svg>Voltar para tela de acesso</a>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}