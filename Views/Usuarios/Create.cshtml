@using plant_care_hub.Constants
@model plant_care_hub.Models.User

@{
    ViewData["Title"] = "Cadastro - PlantCareHub";
}

<section id="create_account">
<div class="container">
    <div class="form-box">
        <h2>🌱 Bem-vindo à plataforma da <strong>PlantCareHub</strong></h2>
        <p>Preencha suas informações para criar sua conta</p>

        <form asp-action="Create">
            <div class="form-row">
                <div>
                    <label>Nome</label>
                    <input asp-for="Name" class="form-control" placeholder="Digite seu nome" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div>
                    <label>WhatsApp</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Digite seu número de celular" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div>
                    <label>E-mail</label>
                    <input asp-for="Email" class="form-control" placeholder="Digite seu e-mail" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div>
                    <label>Senha</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Digite sua senha" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn-register">Cadastrar agora</button>
        </form>
    </div>
</div>
</section>

