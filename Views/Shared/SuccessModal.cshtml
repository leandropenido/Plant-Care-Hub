@{
    Layout = null;
}

<div class="modal fade show" tabindex="-1" role="dialog" style="display:block; background-color:rgba(0,0,0,0.5);" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="successModalLabel">Sucesso</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>@TempData["SuccessMessage"]</p>
            </div>
            <div class="modal-footer">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">OK</a>
            </div>
        </div>
    </div>
</div>